<h2>New Tweet!</h2>
<form class="tweet-compose" action="/tweets" data-tweets-ul="#feed" method="POST">
  <strong class="chars-left"></strong>

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
  </label>
  <br>

  <label>
    Mention
    <script class="user-selection" type="text/template">
      <div class="dropdown">
        <select name="tweet[mentioned_user_ids][]">
          <option></option>
          <% User.all.each do |user| %>
            <option value="<%= user.id %>"><%= user.username %></option>
          <% end %>
        </select>
        <a href="javascript:void(0)" class="remove-mentioned-user">Remove Mention</a>
      </div>
    </script>

    <a href="javascript:void(0)" class="add-mentioned-user">Add Mention</a>
    <div class="mentioned-users">

    </div>
  </label>
  <br>

  <input type="Submit" value="Post Tweet!">
</form>
